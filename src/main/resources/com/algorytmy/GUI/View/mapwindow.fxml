<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="container" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.algorytmy.GUI.Controller.MapWindowController">
   <children>
      <ScrollPane pannable="true" VBox.vgrow="ALWAYS">
         <content>
            <Group>
               <children>
                  <Canvas fx:id="canvas" height="500.0" onScroll="#onScroll" width="500.0" />
               </children>
            </Group>
         </content>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </ScrollPane>
      <ToolBar prefHeight="40.0" VBox.vgrow="ALWAYS">
        <items>
            <Button fx:id="nextStepButton" mnemonicParsing="false" text="Next step" />
            <Button fx:id="twoStepButton" mnemonicParsing="false" text="Skip 5 steps" />
            <Button fx:id="endButton" mnemonicParsing="false" text="Skip all steps" />
        </items>
      </ToolBar>
   </children>
</VBox>
